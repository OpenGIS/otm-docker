version: '3.4'

services:
  otm-server:
    image: jhassler/otm-docker:latest
    container_name: otm-server
    environment:
      - LETSENCRYPT=1
      - EMAIL=admin@this.srv
      - DOMAIN=otm-docker.example.io
      - WHITELIST=127.0.0.1
    volumes:
      - ./data:/mnt
      - ./data/db:/var/lib/postgresql
      - ./data/letsencrypt:/etc/letsencrypt
    ports:
      - '80:80'
      - '443:443'
